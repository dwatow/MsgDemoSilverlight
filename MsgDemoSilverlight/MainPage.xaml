<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" x:Class="MsgDemoSilverlight.MainPage"
    mc:Ignorable="d"
    d:DesignHeight="810" d:DesignWidth="600">
    <Grid >
        <dxlc:LayoutControl HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >
            <dxlc:LayoutGroup Header="LayoutGroup" View="Tabs" x:Name="FunctionSelect" SelectedTabChildChanged="FunctionSelect_SelectedTabChildChanged">
                <dxlc:LayoutGroup Header="FablinkEventWebClient">
                    <dxlc:LayoutControl Orientation="Vertical" >
                        <dxlc:LayoutGroup View="Group" Orientation="Vertical">
                            <dxlc:LayoutGroup Header="LayoutGroup" View="Group">
                                <dxlc:LayoutItem Label="Target Module:">
                                    <dxe:TextEdit x:Name="TargetModule"/>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem Label="Channel Id:">
                                    <dxe:TextEdit x:Name="ChannelId"/>
                                </dxlc:LayoutItem>
                            </dxlc:LayoutGroup>
                            <dxlc:LayoutGroup Header="LayoutGroup" View="Group">
                                <dxlc:LayoutItem Label="Message Id:">
                                    <dxe:TextEdit x:Name="MessageId"/>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem>
                                    <Button x:Name="SendMessage" Click="SendMessage_Click" Height="20" Content="Send Message"/>
                                </dxlc:LayoutItem>
                            </dxlc:LayoutGroup>
                        </dxlc:LayoutGroup>
                        <dxlc:LayoutGroup Header="LayoutGroup" View="Group">
                            <dxlc:LayoutGroup Header="RequestBody" View="GroupBox">
                                <dxlc:LayoutItem >
                                    <dxe:TextEdit x:Name="RequestBody" AcceptsReturn="True" Height="620" VerticalScrollBarVisibility="Visible" />
                                </dxlc:LayoutItem>
                            </dxlc:LayoutGroup>
                            <dxlc:LayoutGroup Header="ReplyBody" View="GroupBox" Orientation="Vertical">
                                <dxlc:LayoutItem >
                                    <dxe:TextEdit x:Name="ReplyBody" AcceptsReturn="True" Height="596" VerticalScrollBarVisibility="Visible" />
                                </dxlc:LayoutItem>
                                <dxlc:LayoutGroup>
                                    <dxlc:LayoutItem >
                                        <Button x:Name="GoToDiffLeftButton" Height="20" Content="Go To Diff Left" Click="ToDiffLeft_Click"/>
                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem >
                                        <Button x:Name="GoToDiffRightButton" Height="20" Content="Go To Diff Right" Click="ToDiffRight_Click"/>
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
                            </dxlc:LayoutGroup>
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutControl>
                </dxlc:LayoutGroup>
                <dxlc:LayoutGroup Header="Diff KXmlItem" Orientation="Vertical">
                    <dxlc:LayoutGroup Header="Command" View="Group">
                        <Button x:Name="DiffMsgButton" Height="20" Content="Diff Message" Click="DiffMessage_Click" IsEnabled="False"/>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup Header="Show Message" View="Group">
                        <dxlc:LayoutGroup Header="Original" View="GroupBox">
                            <dxlc:LayoutItem >
                                <dxe:TextEdit x:Name="LeftXml" Height="660" AcceptsReturn="True" EditValueChanged="LeftXml_EditValueChanged"/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                        <dxlc:LayoutGroup Header="Changed" View="GroupBox">
                            <dxlc:LayoutItem>
                                <dxe:TextEdit x:Name="RightXml" Height="660" AcceptsReturn="True" EditValueChanged="LeftXml_EditValueChanged"/>
                            </dxlc:LayoutItem>
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutGroup>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
